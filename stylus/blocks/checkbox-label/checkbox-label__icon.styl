.checkbox-label__icon
    display table-cell
    width 1px
    padding 0 10px 2px 0
    vertical-align middle

    &:before
        display block
        width 20px
        height 20px
        border 2px solid $input-border-color
        background-color $input-background-color
        color $input-color
        font-size: 20px
        content ""
