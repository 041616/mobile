.button
	position relative
	overflow hidden
	display block
	padding 15px 10px
	margin 0
	border 0 none
	outline 0 none
	box-sizing border-box
	border-radius 3px
	color #fff
	font-weight bold
	text-align center
	text-decoration none
	cursor pointer
	&:before
		z-index 1
		position absolute
		top -50%
		left -20%
		right -20%
		height 100%
		margin-top -2px
		border-radius 50%/30%
		background-color rgba(255,255,255,.14)
		content ""
	&:after
		position absolute
		top -5px
		left 0
		right 0
		height 50%
		content ""
