$button-icon-styles
    .button__caption
        padding 0 35px

        &:after
            position absolute
            left 0
            top 50%
            width 28px
            height 28px
            margin -14px 0 0 0
            font-size 28px

button-theme(fz, clr1, clr2)
    font-size fz
    background linear-gradient(to right, clr1 0%, clr2 45%, clr2 55%, clr1 100%)
    &:after
        background linear-gradient(to bottom, clr1 0%, rgba(clr1, 0) 100%)

@import "button"
@import "button_theme_one"
@import "button_theme_two"
@import "button_theme_three"
@import "button_theme_four"
@import "button_icon_right-arrow"
@import "button_icon_left-arrow"
@import "button_icon_facebook"
@import "button_icon_facebook-like"
@import "button_icon_vkontakte"
@import "button_icon_vkontakte-like"
@import "button_icon_google-plus"
@import "button_icon_google-plus-like"
@import "button_icon_email"
@import "button__caption"
