.button_theme_one
    color $button1-color
    button-theme($button1-font-size, $button1-dark-color, $button1-light-color)

    &.button_icon_right-arrow
        .button__caption:after
            background url(unquote(svg-right-arrow($button1-color))) no-repeat 50% 50%
            background-size contain

    &.button_icon_left-arrow
        .button__caption:after
            background url(unquote(svg-left-arrow($button1-color))) no-repeat 50% 50%
            background-size contain

    &.button_icon_facebook
        .button__caption:after
            background url(unquote(svg-facebook($button1-color))) no-repeat 50% 50%
            background-size contain

    &.button_icon_vkontakte
        .button__caption:after
            background url(unquote(svg-vkontakte($button1-color))) no-repeat 50% 50%
            background-size contain

    &.button_icon_google-plus
        .button__caption:after
            background url(unquote(svg-google-plus($button1-color))) no-repeat 50% 50%
            background-size contain

    &.button_icon_email
        .button__caption:after
            background url(unquote(svg-email($button1-color))) no-repeat 50% 50%
            background-size contain
