.wifi-panel
    position relative
    padding 20px 10px 20px 58px
    margin 10px 0
    background-color $panel-background-color
    color $panel-color
    font-size $font-size * 0.81

    &:before
        @extend $icon-wifi-antenna
        position absolute
        left 10px
        top 50%
        width 38px
        height 38px
        margin -19px 0 0
        color $wifi-panel-icon-color
        font-size: 38px
