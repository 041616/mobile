.wifi-panel
    position relative
    padding 20px 10px 20px 58px
    margin 10px 0
    background-color $panel-background-color
    color $panel-color
    font-size $font-size * 0.81

    &:before
        position absolute
        left 10px
        top 50%
        width 38px
        height 38px
        margin: -19px 0 0
        background url(unquote(svg-wifi-antenna($wifi-panel-icon-color))) no-repeat 50% 50%
        background-size contain
        content ""
